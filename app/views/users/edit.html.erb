<h1><%= @user.username %></h1>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :username %>
    <span id="user_username"><%= @user.username %></span>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, value: 'hunter2' %>
  </div>
  <% if @current_user.is_admin %>
  <div class="field">
    <%= f.label :is_admin %>
    <%= f.check_box :is_admin %>
  </div>
  <% end %>
  <div class="actions">
    <%= f.submit t('.update') %>
  </div>
<% end %>
